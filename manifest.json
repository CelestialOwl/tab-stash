{
  "manifest_version": 2,
  "name": "My TypeScript Firefox Extension",
  "version": "1.0",
  "description": "A basic Firefox extension using TypeScript",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  }
}
