{
  "manifest_version": 2,
  "name": "Tabulus",
  "version": "1.0",
  "description": "Extension for managing your tabs",
  "permissions": ["storage", "tabs", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["newtab.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
